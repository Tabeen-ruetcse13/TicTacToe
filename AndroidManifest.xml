<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidapp.tictactoe"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.androidapp.tictactoe.TicTacToeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.androidapp.tictactoe.Start"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.androidapp.tictactoe.Credit"
            android:label="@string/title_activity_credit" >
        </activity>
        <activity
            android:name="com.androidapp.tictactoe.OpeningActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.androidapp.tictactoe.Choice"
            android:label="@string/title_activity_choice" >
        </activity>
        <activity
            android:name="com.androidapp.tictactoe.TicTacToeHard"
            android:label="@string/title_activity_tic_tac_toe_hard" >
        </activity>
        <activity
            android:name="com.androidapp.tictactoe.TicTacToeEasy"
            android:label="@string/title_activity_tic_tac_toe_easy" >
        </activity>
    </application>

</manifest>